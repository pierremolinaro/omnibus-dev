setter @instructionListIR appendLoadWhenReference
  ?!@semanticTemporariesStruct ioTemporaries
  ?let @objectIR inSource
  !@objectIR outResultingValue
{
  switch inSource
  case null :
    error .nowhere : "<<@instructionListIR appendLoadWhenReference null>>" : outResultingValue
  case reference (@PLMType type llvmName) :
    getNewTempVariable (!type !?ioTemporaries ?outResultingValue)
    [!?self appendLoadFromReference !outResultingValue !llvmName]
#--- Values
  case literalInteger (**) :
    outResultingValue = inSource
  case llvmValue (**) :
    outResultingValue = inSource
  case llvmStructureConstant (* *) :
    outResultingValue = inSource
  case llvmArrayConstant (* *) :
    outResultingValue = inSource
  case literalString (**) :
    outResultingValue = inSource
  case zero (*) :
    outResultingValue = inSource
  end
}

