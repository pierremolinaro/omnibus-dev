#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————
#  CODE GENERATION PREFIXES                                                                                            *
#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

func procNameForInvocationGraph ?@unifiedTypeMap-proxy inReceiverType ?@lstring inName -> @lstring outName {
  var s = "proc"
  if inReceiverType != .null then
    s += " $" + [inReceiverType key]
  end
  s += " " + inName
  outName = .new {!s !inName.location}
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

func funcNameForInvocationGraph ?@unifiedTypeMap-proxy inReceiverType ?@lstring inName -> @lstring outName {
  var s = "func"
  if inReceiverType != .null then
    s += " $" + [inReceiverType key]
  end
  s += " " + inName
  outName = .new {!s !inName.location}
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

func initNameForInvocationGraph ?@lbigint inPriority -> @lstring outName {
  let s = "init " + inPriority.bigint
  outName = .new {!s !inPriority.location}
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

func exceptionNameForInvocationGraph ?@string inName ?@lbigint inPriority -> @lstring outName {
  let s = "exception . " + inName + " " + inPriority.bigint
  outName = .new {!s !inPriority.location}
}

