#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————
#  CODE GENERATION PREFIXES                                                                                            *
#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

func mangledNameForProperty ?name:@string inName -> @string outName {
  outName = "property_" + inName
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

func %once receiverName -> @string outName {
  outName = "receiver"
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

func %once receiverPtrName -> @string outName {
  outName = "receiverPtr"
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

func mangledNameForType ?name:@string inName -> @string outPrefix {
  outPrefix = "type_" + inName
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

func literalStringName ?let @uint inIndex -> @string outName {
  outName = "@string." + inIndex
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

func literalCharacterArrayName ?let @uint inIndex -> @string outName {
  outName = "@str.array." + inIndex
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

func %once staticStringTypeName -> @string outName {
  outName = "staticString"
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

func %once boolTypeName -> @string outName {
  outName = "bool"
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

func %once literalIntegerTypeName -> @string outName {
  outName = "literalInteger"
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

func llvmNameForFunction ?name:@string inName -> @string outName {
  outName = "func." + inName
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

func llvmNameForProcedure ?@string inName -> @string outName {
  outName = "proc." + inName
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

func llvmNameForLocalVariable ?@string inName -> @string outName {
  outName = "var." + inName
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

func llvmNameForGlobalVariable ?@string inName -> @string outName {
  outName = "gvar." + inName
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

func llvmNameForRegister ?name:@string inName -> @string outName {
  outName = "register." + inName
}

