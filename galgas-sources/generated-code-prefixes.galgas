#! Names for invocation graph
#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

func initNameForInvocationGraph ?let @unifiedTypeMap-proxy inReceiverType ?let @lbigint inPriority -> @lstring {
  var s = "init"
  if inReceiverType != .null then
    s += " $" + [inReceiverType key]
  end
  s += " " + inPriority.bigint
  result = .new {!s !inPriority.location}
}

