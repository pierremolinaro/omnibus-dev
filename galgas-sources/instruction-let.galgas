#----------------------------------------------------------------------------------------------------------------------*
#  CODE GENERATION                                                                                                     *
#----------------------------------------------------------------------------------------------------------------------*

class @letInstructionWithAssignmentGeneration : @abstractInstructionGeneration {
  @unifiedTypeMap-proxy mTargetType
  @string mLocalVariable
  @abstractExpressionGeneration mExpressionGeneration
}

#----------------------------------------------------------------------------------------------------------------------*

override getter @letInstructionWithAssignmentGeneration instructionCode -> @string outCode {
  outCode = "const " + mangledNameForType (!name:[mTargetType key]) + " " + mangledNameForVariable (!name:mLocalVariable)
    + " = " + [mExpressionGeneration expressionCode] + " ;\n"
}

