{
  let ctBoolTypeName = [ctBoolTypeName () nowhere]
  [!?ioGraph addNode !ctBoolTypeName !self]
  [!?ioGraph addEdge !compileTimeDeclarationBarrier () !ctBoolTypeName]
}

