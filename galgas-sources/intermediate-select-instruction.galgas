
setter @instructionListIR appendSelectOperation
  ?let @operandIR inTargetValue
  ?let @operandIR in_if_variable
  ?let @operandIR in_then_variable
  ?let @operandIR in_else_variable
{
  self += !@selectInstructionIR.new {!inTargetValue !in_if_variable !in_then_variable !in_else_variable}
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

class @selectInstructionIR : @abstractInstructionIR {
  @operandIR mTargetValue
  @operandIR m_if_variable
  @operandIR m_then_variable
  @operandIR m_else_variable
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

override method @selectInstructionIR llvmInstructionCode
  ?!@string ioLLVMcode
  ?let @generationContext unused inGenerationContext
  ?!@generationAdds unused ioGenerationAdds
{
  ioLLVMcode += "  " + [mTargetValue.mValue llvmName] + " = select "
  ioLLVMcode += [m_if_variable.mType llvmTypeName] + " " + [m_if_variable.mValue llvmName] + ", "
  ioLLVMcode += [m_then_variable.mType llvmTypeName] + " " + [m_then_variable.mValue llvmName] + ", "
  ioLLVMcode += [m_else_variable.mType llvmTypeName] + " " + [m_else_variable.mValue llvmName] + "\n"
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

override method @selectInstructionIR enterAccessibleEntities 
  ?!@accessibleEntities unused ioAccessibleEntities
  ?!@uint unused ioMaxBranchOfOnInstructions
{
}

