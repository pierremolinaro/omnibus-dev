#! @intermediateCodeStruct

struct @intermediateCodeStruct {
  @staticStringMap mStaticStringMap
  @controlRegisterMapIR mControlRegisterMap
  @globalVariableMapIR mGlobalVariableMap
  @globalConstantMapIR mGlobalConstantMap
  @procedureMapIR mProcedureMapIR
  @functionMapIR mFunctionMapIR
  @stringset mRequiredProcedureSet
  @bootListIR mBootList
  @initListIR mInitList
  @instructionListIR mExceptionSetupInstructionListIR
  @instructionListIR mExceptionLoopInstructionListIR
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

map @controlRegisterMapIR {
  @string mRegisterTypeName
  @bigint mRegisterAddress
  insert insertKey error message "** internal error **"
  search searchKey error message "** internal error **"
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

map @globalVariableMapIR {
  @unifiedTypeMap-proxy mType
  @bool mGenerateVolatile
  @valueIR mInitialValue
  insert insertKey error message "** internal error **"
  search searchKey error message "** internal error **"
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

map @globalConstantMapIR {
  @unifiedTypeMap-proxy mType
  @valueIR mSourceExpression
  insert insertKey error message "** internal error **"
  search searchKey error message "** internal error **"
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

abstract class @abstractTypeIR {
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

map @typeMapIR {
  @abstractTypeIR mType
  insert insertKey error message "** internal error **"
  search searchKey error message "** internal error **"
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

map @procedureMapIR {
  @procFormalArgumentListForGeneration mFormalArgumentListForGeneration
  @instructionListIR mInstructionGenerationList
  @bool mIsRequired
  @bool mWarnIfUnused
  @bool mWeak
  @bool mNullOnNoException
  insert insertKey error message "** internal error **"
  search searchKey error message "** internal error **"
  remove removeKey error message "** internal error **"
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

map @functionMapIR {
  @procFormalArgumentListForGeneration mFormalArgumentListForGeneration
  @instructionListIR mInstructionGenerationList
  @unifiedTypeMap-proxy mResultType
  @string mResultVarName
  @bool mWarnIfUnused
  insert insertKey error message "** internal error **"
  search searchKey error message "** internal error **"
}

