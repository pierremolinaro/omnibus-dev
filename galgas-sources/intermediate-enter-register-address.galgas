
setter @instructionListIR appendEnterRegisterAddress
  ?!@semanticTemporariesStruct ioTemporaries
  !@string out_llvmName
  ?let @bigint inAddress
  ?let @string inRegisterName
{
  [!?ioTemporaries newTempLLVMVar ?out_llvmName]
  self += !@enterRegisterAddressIR.new {!out_llvmName !inAddress !inRegisterName}
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

class @enterRegisterAddressIR : @abstractInstructionIR {
  @string mLLVMName
  @bigint mRegisterAddress
  @string mRegisterName
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

override method @enterRegisterAddressIR llvmInstructionCode
  ?!@string ioLLVMcode
  ?let @generationContext unused inGenerationContext
  ?!@generationAdds unused ioGenerationAdds
{
  ioLLVMcode += "  " + mLLVMName + " = add i32 " + mRegisterAddress
             + ", 0 ; " + mRegisterName + " at " + [mRegisterAddress hexString] + "\n"
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

override method @enterRegisterAddressIR enterAccessibleEntities 
  ?!@accessibleEntities unused ioAccessibleEntities
  ?!@uint unused ioMaxBranchOfOnInstructions
{
}

