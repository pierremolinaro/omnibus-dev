#  SYNTAX                                                                                                               
#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

syntax extension plm_syntax {

  #·····················································································································

  rule <declaration> ?!@ast ioAST {
    $check$
    $target$
    $"string"$ ?let targetName
    ioAST.mCheckTargetList += !targetName
  }

  #·····················································································································

}

