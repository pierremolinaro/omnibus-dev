#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

setter @instructionListIR appendInstructionAsFreeString ?let @string inString {
  self += !@freeStringIR.new {!inString}
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

class @freeStringIR : @abstractInstructionIR {
  @string mString
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

override method @freeStringIR llvmInstructionCode
  ?!@string ioLLVMcode
  ?let @generationContext unused inGenerationContext
  ?!@generationAdds unused ioGenerationAdds
{
  ioLLVMcode += "  " + mString + "\n"
}

