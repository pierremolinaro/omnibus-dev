  ?!@semanticTypePrecedenceGraph ioGraph
{
  let literalIntegerTypeName = [literalIntegerTypeName () nowhere]
  [!?ioGraph addNode !literalIntegerTypeName !self]
  [!?ioGraph addEdge !literalIntegerTypeName ![boolTypeName () nowhere]]
}

