#  let lessThan_key = infixOperatorMapKey (!leftType !.lessThan !mInfixOperatorLocation !rightType)
#  if [ioContext.mInfixOperatorMap hasKey !equal_key] & [ioContext.mInfixOperatorMap hasKey !lessThan_key] then
#    let infEqual_definition = @compileTimeInfixOperatorUsage.new {
#      !mLeftOperandName
#      !mRightOperandName
#      !mExpression
#    }
#    let infEqual_key = infixOperatorMapKey (!leftType !.equal !mInfixOperatorLocation !rightType)
#    [!?ioContext.mInfixOperatorMap insertKey !infEqual_key !resultType !definition]   
#    end
#  end
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————
#!  GENERATE CODE                                                                                                     
#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

class @compileTimeInfixOperatorUsage : @omnibusInfixOperatorUsage {
  @lstring mLeftOperandName
  @lstring mRightOperandName
  @ctExpressionAST mExpression
}

#·······················································································································

override method @compileTimeInfixOperatorUsage generateCode
  ?let @objectIR inLeftOperand
  ?let @location unused inOperatorLocation
  ?let @objectIR inRightOperand
  ?let @omnibusType inResultType
  ?!@semanticTemporariesStruct unused ioTemporaries
  ?!@instructionListIR unused ioInstructionGenerationList
  !@objectIR outResultValue
{
  [inLeftOperand literalInteger ?1* ?value: let leftValue]
  [inRightOperand literalInteger ?1* ?value: let rightValue]
  @ctMap varMap = {}
  [!?varMap insertKey !mLeftOperandName !leftValue]
  [!?varMap insertKey !mRightOperandName !rightValue]
  [mExpression computeCompileTimeExpression !varMap ?result: let result]
  outResultValue = .literalInteger {!type: inResultType !value: result}
}

