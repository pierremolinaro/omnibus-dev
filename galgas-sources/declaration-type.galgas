#  SYNTAX                                                                                                               
#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

syntax extension plm_syntax {

  #·····················································································································

  rule <declaration> ?!@ast ioAST {
    $type$
    $\$type$ ?let newTypeName
    $:$
    <declaration_type> !newTypeName ?let declaration
    ioAST.mDeclarationListAST += !declaration
  }

  #·····················································································································

  rule <type_definition> !@lstring outTypeName {
    $\$type$ ?outTypeName
  }
  
  #·····················································································································

}

