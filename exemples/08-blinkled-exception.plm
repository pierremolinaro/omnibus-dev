target "teensy-3-1-sequential-systick"

//------------------------------------------------*

proc setup `user () {
}

//------------------------------------------------*

var toggle = true {
  @rw proc loop ()
}

var gCount $uint3 = 0 {
  @rw proc loop ()
}

//------------------------------------------------*

proc loop `user () {
  waitMS (!250)
  ledOn (!LED_TEENSY) // Allumer la led
  waitMS (!250)
  ledOff (!LED_TEENSY)  // Ã‰teindre la led
  toggle = not toggle
  if toggle then
    gCount ++ // EXCEPTION AFTER 7s
    goto (!line:1 !column:0)
    printUnsigned (!extend gCount : $uint32)
  end
}

//------------------------------------------------*
