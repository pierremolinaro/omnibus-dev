<div>
<h1>Control Registers of %!PROJECT_NAME%</h1>
<p>This document lists all %![CONTROL_REGISTER_COUNT string]% defined control registers, sorted by name.</p>
<p>%
for () in FIRST_LETTER_SET
do %<a class="header_link" href="#%![[[key characterAtIndex!0] uint] string]%">%!key%</a>%
between % - %
end
%</p>
<p class="link">%
!TABLE_OF_TYPES_STRING%
</p>
<table class="result">
<tr><td class="result_title">Control Register Name</td><td class="result_title">PLM Type</td><td class="result_title">Address</td><td class="result_title">Value</td></tr>\n%
for () in CONTROL_REGISTER_GROUP_MAP : group_ do
  for () in group_mControlRegisterMap : reg_ do
    switch reg_mControlRegisterGroupKind
    case single (registerAddress) :
      if reg_mArraySize == 0 then
        %<tr class="result_line"><td class="name">%
        %<a name="%!group_lkey.string + ":" + reg_lkey%">%!group_lkey.string + ":" + reg_lkey%</a>%
        %</td><td class="type">$%!reg_mType.plmOriginalTypeName%</td><td class="address">%
        ![registerAddress hexStringSeparatedBy !'_' !4]
        %</td><td>%
        if [reg_mControlRegisterFieldList length] > 0 then
          %<table class="fields">%
            %<tr>%!fieldIndexColumns (!reg_mRegisterBitCount) %</tr>%
            %<tr>%
            for > () in reg_mControlRegisterFieldList do
              %<td class="fields" colspan="% ![mFieldBitCount string] %">% !mFieldName %</td>%
            end
            %</tr>%
          %</table>%
        end  
        %</td></tr>\n%
      else
        for () in arrayIndexListFor (!size:reg_mArraySize) do
          %<tr class="result_line"><td class="name">%
          %<a name="%!group_lkey.string + ":" + reg_lkey%[%![mValue string]%]">%!group_lkey.string + ":" + reg_lkey% [%![mValue string]%]</a>%
          %</td><td class="type">$%!reg_mType.plmOriginalTypeName%</td><td class="address">%
          ![registerAddress + mValue * reg_mElementArraySize hexStringSeparatedBy !'_' !4]
          %</td><td>%
          if [reg_mControlRegisterFieldList length] > 0 then
            %<table class="fields">%
              %<tr>%!fieldIndexColumns (!reg_mRegisterBitCount) %</tr>%
              %<tr>%
              for > () in reg_mControlRegisterFieldList do
                %<td class="fields" colspan="% ![mFieldBitCount string] %">% !mFieldName %</td>%
              end
              %</tr>%
            %</table>%
          end  
          %</td></tr>\n%
        end
      end
    end
  end
end%
</table>
