<div>
<h1>Control Registers of %!PROJECT_NAME%</h1>
<p>This document lists all %![CONTROL_REGISTER_COUNT string]% defined control registers, sorted by name.</p>
<p>%
for () in FIRST_LETTER_SET
do %<a class="header_link" href="#%![[[key characterAtIndex!0] uint] string]%">%!key%</a>%
between % - %
end
%</p>
<p>%
!TABLE_OF_TYPES_STRING%
</p>
<table class="result">
<tr><td class="result_title">Control Register Name</td><td class="result_title">PLM Type</td><td class="result_title">Address</td><td class="result_title">Value</td></tr>\n%
for () in CONTROL_REGISTER_GROUP_MAP : group_ do
  for () in group_mControlRegisterMap do
    if mArraySize == 0 then
      %<tr class="result_line"><td>%
      %<a name="%!group_lkey.string + ":" + lkey%">%!group_lkey.string + ":" + lkey%</a>%
      %</td><td class="address">$%!mType.plmOriginalTypeName%</td><td class="address">%
      ![mAddress hexString]
      %</td><td>%
      if [mControlRegisterFieldList length] > 0 then
        %<table class="fields">%
          %<tr>%!fieldIndexColumns (!mRegisterBitCount) %</tr>%
          %<tr>%
          for > () in mControlRegisterFieldList do
            %<td class="fields" colspan="% ![mFieldBitCount string] %">% !mFieldName %</td>%
          end
          %</tr>%
        %</table>%
      end  
      %</td></tr>\n%
    else
      for () in arrayIndexListFor (!size:mArraySize) do
        %<tr class="result_line"><td>%
        %<a name="%!group_lkey.string + ":" + lkey% [%![mValue string]%]">%!group_lkey.string + ":" + lkey% [%![mValue string]%]</a>%
        %</td><td class="address">$%!mType.plmOriginalTypeName%</td><td class="address">%
        ![mAddress + mValue * mElementArraySize hexString]
        %</td><td>%
        if [mControlRegisterFieldList length] > 0 then
          %<table class="fields">%
            %<tr>%!fieldIndexColumns (!mRegisterBitCount) %</tr>%
            %<tr>%
            for > () in mControlRegisterFieldList do
              %<td class="fields" colspan="% ![mFieldBitCount string] %">% !mFieldName %</td>%
            end
            %</tr>%
          %</table>%
        end  
        %</td></tr>\n%
      end
    end
  end
end%
</table>
