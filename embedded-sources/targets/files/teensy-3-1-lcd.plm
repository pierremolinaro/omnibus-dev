//      GPIOC_PCOR = 1 << 0 ;
//    }
  }
  
  //············································································
  
  func setD6 @noUnusedWarning (?inValue $bool) { // PTD1
    digitalWrite (!port:DATA_6 !inValue)
//    if inValue {
//      GPIOD_PSOR = 1 << 1 ;
//    }else{
//      GPIOD_PCOR = 1 << 1 ;
//    }
  }
  
  //············································································
  
  func setD7 @noUnusedWarning (?inValue $bool) { // PTB2
    digitalWrite (!port:DATA_7 !inValue)
