//——————————————————————————————————————————————————————————————————————————————
//   PORT CONFIGURATION                                                         
//——————————————————————————————————————————————————————————————————————————————

//   DB4 : PTB0 --> $digitalPort.D16
//   DB5 : PTC0 --> $digitalPort.D15
//   DB6 : PTD1 --> $digitalPort.D14
//   DB7 : PTB2 --> $digitalPort.D19
//   RS  : PTB3 --> $digitalPort.D18
//   E   : PTB1 --> $digitalPort.D17

let DATA_4 = $digitalPort.D16
let DATA_5 = $digitalPort.D15
let DATA_6 = $digitalPort.D14
let DATA_7 = $digitalPort.D19

let RS = $digitalPort.D18
let ENABLE = $digitalPort.D17

//——————————————————————————————————————————————————————————————————————————————

module lcd {
  
  //············································································

  func init configurePorts @noUnusedWarning () {
    digitalMode (!port:DATA_4 !mode:.OUTPUT)
    digitalMode (!port:DATA_5 !mode:.OUTPUT)
    digitalMode (!port:DATA_6 !mode:.OUTPUT)
    digitalMode (!port:DATA_7 !mode:.OUTPUT)
    digitalMode (!port:RS     !mode:.OUTPUT)
    digitalMode (!port:ENABLE !mode:.OUTPUT)
  }
  
  //············································································
  
  func driveHighE @noUnusedWarning () {
    digitalWrite (!port:ENABLE !true)
  }
  
  //············································································
  
  func driveLowE @noUnusedWarning () {
    digitalWrite (!port:ENABLE !false)
  }
  
  //············································································
  
  
  func driveHighRS @noUnusedWarning () {
   digitalWrite (!port:RS !true)
  }
  
  //············································································
  
  func driveLowRS @noUnusedWarning () {
    digitalWrite (!port:RS !false)
  }
  
  //············································································
  
  func setD4 @noUnusedWarning (?inValue $bool) { // PTB0
    digitalWrite (!port:DATA_4 !inValue)
  }
  
  //············································································
  
  func setD5 @noUnusedWarning (?inValue $bool) { // PTC0
    digitalWrite (!port:DATA_5 !inValue)
//    if inValue {
