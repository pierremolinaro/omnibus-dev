target "LPC-L2294"

//------------------------------------------------*

section ledOn () {
  #IO1:CLR  = 1 << 23 // Led On
}

//------------------------------------------------*

section ledOff () {
  #IO1:SET  = 1 << 23 // Led Off
}

//------------------------------------------------*

task T1 @stacksize 512 @activate {
  var compteur : UInt32 = 0

  on time.wait (!until:self.compteur) {
    ledOn ()
    self.compteur +%= 500
    time.wait (!until:self.compteur)
    ledOff ()
    self.compteur +%= 500
  }
}

//------------------------------------------------*
