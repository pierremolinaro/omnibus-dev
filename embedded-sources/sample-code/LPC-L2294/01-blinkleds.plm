target "LPC-L2294"

//------------------------------------------------*

section ledOn () {
  IO1CLR  = 1 << 23 // Led On
}

//------------------------------------------------*

section ledOff () {
  IO1SET  = 1 << 23 // Led Off
}

//------------------------------------------------*

task T1 priority 1 stackSize 512 {
  var compteur $uint32 = 0

  func loop () {
    waitUntilMS (!deadline:self.compteur)
    ledOn ()
    self.compteur +%= 500
    waitUntilMS (!deadline:self.compteur)
    ledOff ()
    self.compteur +%= 500
  }
}

//------------------------------------------------*
