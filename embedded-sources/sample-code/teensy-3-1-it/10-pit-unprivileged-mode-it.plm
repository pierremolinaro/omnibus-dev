target "teensy-3-1-it"

//------------------------------------------------*

init 100_000 {
  SIM_SCGC6 |= SIM_SCGC6_PIT
  NVIC_ISER2 = 1 << ((84 - 16) & 31)
//  NVIC_ISER = 1 << (84 - 16)
  AICS0_PARCG = 0
}

//------------------------------------------------*

section setupPIT () {
  PIT_MCR = 0
  PIT_LDVAL0 = 200000
  PIT_TCTRL0 = 3 // Interrupt, enabled
}

proc setup `user () {
  setupPIT ()
}

//------------------------------------------------*

//proc setup `user () {
//  PIT_MCR = 0
//  PIT_LDVAL0 = 200000
//  PIT_TCTRL0 = 3 // Interrupt, enabled
//}

//------------------------------------------------*

var gPITValue $uint32 = 0 {
  proc loop
  @rw proc PITChannel0Handler
}

//------------------------------------------------*

proc PITChannel0Handler `isr () {
//--- Acquitter l'interruption
  PIT_TFLG0 = 1
//--- Incrémenter le compteur
  gPITValue += 1
}

//------------------------------------------------*

proc loop `user () {
  waitMS (!250)
  ledOn (!LED_L1) // Allumer la led
  waitMS (!250)
  ledOff (!LED_L1)  // Éteindre la led
  goto (!line:1 !column:0)
  printSpaces (!10)
  goto (!line:1 !column:0)
  printUnsigned (!gPITValue)
}

//------------------------------------------------*
