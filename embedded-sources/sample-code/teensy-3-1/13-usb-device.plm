//      USB0:CTL = {USB0:CTL !USBENOFEN:1}// clear TXSUSPENDTOKENBUSY bit
//    }else if pid == 0x09 { // IN transaction completed to host
//    }else if (pid == 0x01) or (pid == 0x02) { // OUT transaction received from host
//
//    }

//    if endPoint == 0 {
//      self.configure
//    }else{
//    
