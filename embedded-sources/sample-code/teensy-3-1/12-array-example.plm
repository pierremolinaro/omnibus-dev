target "teensy-3-1/unprivileged"

import "carte-tp-teensy-3-1.plm-import"

//-----------------------------------------------------------------------------*

let SIZE = 3

typealias A = [•SIZE • UInt32]

struct B {
  var a : UInt32 = 0
  var b : UInt32 = 0
}

struct C {
  var c = new B ()
}

let array = new A (!1 !2 !3)

//------------------------------------------------*

task T @stacksize 512 @activate {
  var deadline : UInt32 = 0
  var array = new A (!repeated:0)
  var array2 = new A (!repeated:1)
  var index : Int32 = 0

  on @setup first {
    digital.set (!mode:.OUTPUT !toPort:.D13)
    digital.set (!mode:.OUTPUT !toPort:LED_L1)
  }

  on time.wait (!until:self.deadline) {
    self.deadline +%= 1000
//    digital.toggle (!port:LED_L1)
    self.array [self.index] = 0
    self.index +%= 1
    if self.index == SIZE {
      self.index = 0
    }
    for i : UInt32 in 0 ..< A.count {
      self.array [i] +%= 1
    }
    self.array2 = self.array
    lcd.goto (!line:0 !column:0)
    for i : UInt32 in 0 ..< A.count {
      lcd.print (!u32:self.array2 [i])
      lcd.print (!spaces:1)
    }

  //--- Init from a repeated static value
    var a = new A (!repeated:5)
  //--- Init from a repeated dynamic value
    var e : UInt32 = 5
    var b = new A (!repeated:e)
  //--- Init from a static values
    var c = new A (!0 !1 !2)
  //--- Init from a dynamic values
    var d = new A (!0 !e !2)
  //---
    var x : UInt32 = 0
    for i : UInt32 in 0 ..< A.count {
      a [i] = 9
      a [i] += 9
      x += a [i]
    }

    var s = new B ()
    var aa = s.a
    var bb = s.b
    s.a = aa
    var s2 = new C ()
    s2.c.a = aa
  }
}

//------------------------------------------------*
