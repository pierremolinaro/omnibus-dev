//------------------------------------------------*

task T priority 12 stackSize 512 {
  var top $uint32 = 0

  proc setup () {
    s.P ()
    s.V ()
  }
  
  proc loop () {
    waitUntilMS (!deadline:self.top)
    self.top += 250
    ledOn (!LED_L1) // Allumer la led
    waitUntilMS (!deadline:self.top)
    self.top += 250
    ledOff (!LED_L1)  // Ã‰teindre la led
  }
}

