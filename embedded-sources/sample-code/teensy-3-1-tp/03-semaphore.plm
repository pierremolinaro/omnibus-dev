target "teensy-3-1-tp"

//------------------------------------------------*

struct $semaphore {
  var value $uint32
  var list = $taskList ()

  service P `kernel () {
    if self.value > 0 then
      self.value -= 1
    else
      kernel_blockRunningTaskInList (!?self.list)
    end
  }

  service V `kernel () {
    kernel_makeTaskReadyFromWaitingList (!?self.list ?let found)
    if not found then
      self.value += 1
    end
  }
}

var s = $semaphore (!value:0) {
  proc $T1.loop
  proc $T2.loop
}

//------------------------------------------------*

task T1 priority 1 stackSize 512 {
  var top $uint32 = 0

  proc setup () {
  }
  
  proc loop () {
    waitUntilMS (!deadline:self.top)
    s.V ()
    self.top += 250
    ledOn (!LED_L1)
    waitUntilMS (!deadline:self.top)
    s.V ()
    self.top += 250
    ledOff (!LED_L1)
  }
}

//------------------------------------------------*

task T2 priority 2 stackSize 512 {

  proc setup () {
  }
  
  proc loop () {
    s.P ()
    ledOn (!LED_L2)
    s.P ()
    ledOff (!LED_L2)
  }
}

//------------------------------------------------*
