target "teensy-3-1-tp"

//------------------------------------------------*

struct $monSemaphore {
  var value $uint32
  var list = $taskList ()

  service P `kernel () {
    if self.value > 0 then
      self.value -= 1
    else
      blockInList (!?list:self.list)
    end
  }

  service V `kernel () {
    let found = makeTaskReady (!?list:self.list)
    if not found then
      self.value += 1
    end
  }
}

//------------------------------------------------*

var s = $monSemaphore (!value:0) {
  func $T1.loop
  func $T2.loop
}

//------------------------------------------------*

task T1 priority 1 stackSize 512 {
  var top $uint32 = 0

  init 123 {
    self.top = 1
  }
  
  init 256 {
    self.top += 2
  }
  
  func loop () {
    waitUntilMS (!deadline:self.top)
    s.V ()
    self.top += 250
    ledOn (!LED_L1)
    waitUntilMS (!deadline:self.top)
    s.V ()
    self.top += 250
    ledOff (!LED_L1)
  }
}

//------------------------------------------------*

task T2 priority 2 stackSize 512 {

  func loop () {
    s.P ()
    ledOn (!LED_L2)
    s.P ()
    ledOff (!LED_L2)
  }
}

//------------------------------------------------*
